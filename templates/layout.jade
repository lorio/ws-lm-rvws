doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      <link rel="stylesheet" href="https://use.typekit.net/skk1ebk.css">
      <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
      link(rel='stylesheet', href='/../../node-modules/reset.css/reset.css')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header
        block header
          h1
            a(href=locals.url)= locals.name
          h2.description
            a(href="/")= locals.description
          .btn.cta
            a(href="http://livemag.org/support/")
              p Subscribe!
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
